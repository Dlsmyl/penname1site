{
  "id": "post",
  "label": "Post",
  "repeatable": true,
  "status": true,
  "format": "page",
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "The title of your post",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "uid": {
        "config": {
          "label": "UID",
          "placeholder": ""
        },
        "type": "UID"
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "strong,em,paragraph"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "carousel": {
              "type": "SharedSlice"
            },
            "mailer_lite_sign_up": {
              "type": "SharedSlice"
            },
            "series_hero": {
              "type": "SharedSlice"
            },
            "hero_with_figure": {
              "type": "SharedSlice"
            },
            "prose": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "meta_image": {
        "config": {
          "label": "Meta Image",
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
